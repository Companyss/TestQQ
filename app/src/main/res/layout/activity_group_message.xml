<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0000ff"
        android:minHeight="50dp" >
        <TextView
            android:id="@+id/group_message_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群信息"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/group_message_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="name"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/group_message_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:scrollbars="none"
        android:divider="@null"
        android:listSelector="#87CEFA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/group_message_edtext"
            android:ems="15"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_message_sendbtn"
            android:text="@string/send"/>
    </LinearLayout>
</LinearLayout>